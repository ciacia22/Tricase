<div class="container">
<%= form_for (@content), html: { multipart: true } do |f| %>    <!-- questo dice che devi creare un form per la variabile content e do (crea) un campo per tutti quelli sotto, ossia titolo descrizione prezzo  -->
  <% if @content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% @content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :titolo %><br>
    <%= f.text_field :titolo %>
  </div>
  <div class="field">
    <%= f.label :descrizione %><br>
    <%= f.text_area :descrizione %>
  </div>
  <div class="field">
    <%= f.label :prezzo %><br>
    <%= f.text_field :prezzo %>
  </div>
  <div class="field">
    <%= f.label :cover %><br>
    <%= f.file_field :cover %>
  </div>

   <div class="field">
    <%= f.label :allegato %><br>
    <%= f.file_field :allegato %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>